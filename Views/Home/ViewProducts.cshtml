
@{
    ViewData["Title"] = "ViewProducts";
}

@model List<CoffeeOptions>

<h1>Order</h1>

<table>
    <tr>
        <th>Item</th>
        <th>Price</th>
        
    </tr>
    @foreach (CoffeeOptions item in Model)
    {
        <tr>
            <td>@item.Name </td>
            <td>@item.Price </td>
            

            <td><a href="../Order/AddToCart" class="btn btn-primary">Add to Cart!</a> </td>

        </tr>
    }
</table>